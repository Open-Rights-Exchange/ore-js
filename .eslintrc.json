{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "object-curly-newline": "off",
    "no-new": [0],
    "no-unused-vars": "off",
    "no-shadow": "off",
    "no-continue": "off",
    "max-len": [
      2,
      {
        "code": 600
      }
    ],
    "comma-dangle": ["error", "never"],
    "no-use-before-define": 0,
    "no-param-reassign": 0,
    "prefer-destructuring": 0,
    "camelcase": 0,
    "array-callback-return": 0
  },
  "globals": {
    "Web3": false
  }
}
